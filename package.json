{
  "name": "react-broadcast",
  "version": "0.3.1",
  "description": "A reliable way to broadcast state changes to React elements deep in the hierarchy",
  "repository": "ReactTraining/react-broadcast",
  "license": "MIT",
  "author": "Michael Jackson",
  "main": "dist/react-broadcast.es.js",
  "module": "dist/react-broadcast.es.js",
  "files": [
    "dist/**",
    "README.md"
  ],
  "scripts": {
    "build": "cross-env run-p build:umd build:umd:min build:es",
    "build:umd": "cross-env NODE_ENV=development BABEL_ENV=rollup rollup -c -f umd -o dist/react-broadcast.umd.js",
    "build:umd:min": "cross-env NODE_ENV=production BABEL_ENV=rollup rollup -c -f umd -o dist/react-broadcast.umd.min.js",
    "build:es": "cross-env NODE_ENV=development BABEL_ENV=rollup rollup -c -f es -o dist/react-broadcast.es.js",
    "clean": "git clean -fdX .",
    "prepublishOnly": "npm run build",
    "release": "node ./tools/release.js",
    "lint": "eslint modules",
    "test": "jest"
  },
  "peerDependencies": {
    "react": ">=15"
  },
  "dependencies": {
    "invariant": "^2.2.1",
    "prop-types": "^15.5.6"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.6",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "cross-env": "^5.0.0",
    "eslint": "^3.3.1",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-react": "^6.1.2",
    "jest": "^20.0.4",
    "npm-run-all": "^4.0.2",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "readline-sync": "^1.4.4",
    "rimraf": "^2.5.4",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-bundle-size": "^1.0.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-includepaths": "^0.2.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^2.0.0",
    "rollup-watch": "^4.3.1"
  },
  "keywords": [
    "react",
    "context",
    "broadcast",
    "subscribe",
    "subscriber",
    "subscription",
    "subscriptions"
  ]
}
